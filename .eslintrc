{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "object-curly-spacing": ["error", "always"],
        "no-unused-vars": "warn",
        "no-console": "off",
        "indent": ["error", 4],
        "quotes": ["error", "single"],
        "semi": ["error", "always"]
    },
    "ignorePatterns": ["node_modules/", "dist/"]
}
